<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools" >

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            tools:context="org.itsnat.itsnatdroidtest.MainActivity">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TEST REMOTE RESOURCES"
            android:textSize="25dp"
            android:background="#00ff00">
        </TextView>

        <Button
                android:id="@id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BACK" />

        <Button
                android:id="@id/buttonReload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/button_reload" />

        <!-- Test Fragment Insertion setInnerXML -->
        <Button id="testFragmentInsertionInnerXMLId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Test Fragment Insertion with setInnerXML" />

        <TextView id="testFragmentInsertionInnerXMLHiddenId"
                android:layout_width="0dp"
                android:layout_height="0dp" />        
        
        <!-- Test Fragment Insertion using DOM API -->
        <Button id="testFragmentInsertionUsingDOMAPIId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Test Fragment Insertion using DOM API" />

        <TextView id="testFragmentInsertionUsingDOMAPIHiddenId"
                android:layout_width="0dp"
                android:layout_height="0dp" />         
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:text="BitmapDrawable (green rect, using itsnat_doc_name)"
            android:textSize="18dp"
            android:background="@remote:drawable/ItsNatDroidServletExample?itsnat_doc_name=test_droid_remote_drawable" />     
           
        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginTop="20dp"
            android:text="BitmapDrawable (partial img in center)"
            android:textSize="18dp"
            android:background="@remote:drawable/droid/res/drawable/test_bitmap_drawable_remote.xml" />        
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginTop="20dp"
            android:text="BitmapDrawable 2 (partial img repeated)"
            android:textSize="18dp"
            android:background="@remote:drawable/droid/res/drawable/test_bitmap_drawable_remote_2.xml" />        
            
        
        <TextView
            id="testClipDrawableId"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:text="ClipDrawable (half img)"
            android:textSize="20dp"
            android:background="@remote:drawable/droid/res/drawable/test_clip_drawable_remote.xml" />

        
        <TextView
            id="testClipDrawableId2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:text="ClipDrawable 2 (half img)"
            android:textSize="20dp"
            android:background="@remote:drawable/droid/res/drawable/test_clip_drawable_remote_2.xml" />                
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:text="ColorDrawable (gray)"
            android:textSize="20dp"
            android:background="@remote:drawable/droid/res/drawable/test_color_drawable_remote.xml" />        
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:text="NinePatchDrawable (border must be green)"
            android:textSize="20dp"
            android:background="@remote:drawable/droid/res/drawable/test_nine_patch_remote.xml" />        
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:text="LayerDrawable (2 green rects and centered img)"
            android:textSize="20dp"
            android:background="@remote:drawable/droid/res/drawable/test_layer_drawable_remote.xml" />
  
        <TextView
            id="testTransitionDrawableId"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:text="TransitionDrawable (green rect padded, press adds a centered bot"
            android:textSize="20dp"
            android:background="@remote:drawable/droid/res/drawable/test_transition_drawable_remote.xml" />
        
        
        <Button
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:text="StateListDrawable (green rect, press to change to a bot in center)"
            android:textSize="20dp"
            android:background="@remote:drawable/droid/res/drawable/test_state_list_drawable_remote.xml" />

        <TextView
            id="testLevelListDrawableId"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:text="LevelListDrawable (green rect, press to change to a bot in center)"
            android:textSize="20dp"
            android:background="@remote:drawable/droid/res/drawable/test_level_list_drawable_remote.xml" />        
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:text="InsetDrawable (green rect with insets, text inside)"
            android:textSize="20dp"
            android:background="@remote:drawable/droid/res/drawable/test_inset_drawable_remote.xml" />        
        
        <TextView
            id="testScaleDrawableId"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:text="ScaleDrawable (green, small and centered rect)"
            android:textSize="20dp"
            android:background="@remote:drawable/droid/res/drawable/test_scale_drawable_remote.xml" />        
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:text="GradientDrawable"
            android:textSize="20dp"
            android:background="@remote:drawable/droid/res/drawable/test_gradient_drawable_remote.xml" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:text="GradientDrawable 2"
            android:textSize="20dp"
            android:background="@remote:drawable/droid/res/drawable/test_gradient_drawable_remote_2.xml" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:text="GradientDrawable 3"
            android:textSize="20dp"
            android:background="@remote:drawable/droid/res/drawable/test_gradient_drawable_remote_3.xml" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:text="GradientDrawable 4"
            android:textSize="20dp"
            android:background="@remote:drawable/droid/res/drawable/test_gradient_drawable_remote_4.xml" />
        
        <TextView
            id="testAnimationDrawableId"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:text="AnimationDrawable (green rect and bot switching)"
            android:textSize="20dp"
            android:background="@remote:drawable/droid/res/drawable/test_animation_drawable_remote.xml" />        
        
    </LinearLayout>
</ScrollView>
